# Set up compile options
CC    = gcc
RM    = rm -f
MV    = mv
EXTRA = -Wall -g

# Set up environment variables
XML2INC = /usr/include/libxml2/libxml
ESPAINC = 
GSL_SCI_INC = /alt/local/gsl/1.16/include
GSL_SCI_LIB = /alt/local/gsl/1.16/lib
BIN=/alt/local/run

# Define the include files
INC = input.h 2d_array.h ccdc.h output.h utilities.h 
#INCDIR  = -I. -I$(XML2INC) -I$(ESPAINC) -I$(GSL_SCI_INC)
INCDIR  = -I. -I$(GSL_SCI_INC) -I$(XML2INC) -I$(ESPAINC) -I$(GSL_SCI_INC)
NCFLAGS = $(EXTRA) $(INCDIR)

# Define the source code and object files
SRC = input.c 2d_array.c ccdc.c utilities.c misc.c 
OBJ = $(SRC:.c=.o)

# Define the object libraries
LIB = -L$(GSL_SCI_LIB) -lz -lpthread -lrt -lgsl -lgslcblas -lm

# Define the executable
EXE = ccdc

# Target for the executable
all: $(EXE)

ccdc: $(OBJ) $(INC)
	$(CC) $(NCFLAGS) -o ccdc $(OBJ) $(LIB)

install:
	cp $(EXE) $(BIN)
	cp scripts/* $(BIN)

clean:
	$(RM) *.o $(EXE)

$(OBJ): $(INC)

.c.o:
	$(CC) $(NCFLAGS) $(INCDIR) -c $<

